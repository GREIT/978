<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="it.polito.mad.greit.project.ShowProfile">

  <include layout="@layout/toolbar"
    android:id="@+id/show_profile_toolbar"
    />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:padding="30dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="ProfilePic"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        app:civ_border_color="@color/colorAccent"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:civ_border_width="3dp" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:orientation="vertical">

      <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:contentDescription="Name"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Mario Rossi"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorPrimaryTitle" />

      <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/username"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorSecondaryTitle" />
    </LinearLayout>
  </LinearLayout>

  <ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="vertical"
      android:padding="30dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="top"
          android:layout_marginRight="40dp"
          android:src="@drawable/ic_email_black_24dp"
          android:tint="@color/colorPrimaryDark" />

        <TextView
          android:id="@+id/email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:contentDescription="Email"
          android:text="@string/email"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
          android:textColor="@color/colorPrimaryText" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="top"
          android:layout_marginRight="40dp"
          android:src="@drawable/ic_place_black_24dp"
          android:tint="@color/colorPrimaryDark" />

        <TextView
          android:id="@+id/location"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:contentDescription="Location"
          android:text="@string/location"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
          android:textColor="@color/colorPrimaryText" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="top"
          android:layout_marginRight="40dp"
          android:src="@drawable/ic_description_black_24dp"
          android:tint="@color/colorPrimaryDark" />

        <TextView
          android:id="@+id/biography"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"

          android:contentDescription="Biography"
          android:text="@string/bio_sample"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
          android:textColor="@color/colorPrimaryText" />
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>