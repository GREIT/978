<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="150dp"
  android:layout_height="150dp">

  <android.support.v7.widget.CardView
    android:id="@+id/book_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:elevation="5dp"
    card_view:cardCornerRadius="3dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="100dp">

          <ImageView
            android:id="@+id/shared_book_card_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:transitionName="thumbnailTransition"/>

          <ImageView
            android:id="@+id/overlay_shared_book_card_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            />

        </RelativeLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:gravity="center_vertical"
          android:orientation="vertical">

          <RatingBar
            android:id="@+id/shared_book_card_conditions"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:elevation="3dp"
            android:focusable="true"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.5"
            android:theme="@style/RatingBar" />

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:elevation="3dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/shared_book_card_contactForLoan"
          android:layout_width="50dp"
          android:layout_height="40dp"
          android:layout_weight="1"
          android:elevation="3dp"
          android:padding="10dp"
          android:scaleType="fitXY" />

        <ImageView
          android:id="@+id/shared_book_card_moreInfo"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_weight="1"
          android:elevation="3dp"
          android:padding="10dp"
          android:scaleType="fitXY" />

        <ImageView
          android:id="@+id/shared_book_card_distance"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_weight="1"
          android:elevation="3dp"
          android:padding="10dp"
          android:scaleType="fitXY" />

      </LinearLayout>

    </LinearLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>