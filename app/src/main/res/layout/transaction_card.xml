<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/tools"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="80dp">

  <android.support.v7.widget.CardView
    android:id="@+id/transaction_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    android:paddingVertical="5dp"
    card_view:cardCornerRadius="3dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/transaction_arrow"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:elevation="5dp"
          app:srcCompat="@drawable/ic_arrow_back_grey_800_48dp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="5dp"
        android:orientation="vertical">

        <TextView
          android:id="@+id/transaction_book_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="5dp"
          android:layout_marginVertical="2dp"
          android:text="Il Gattopardo"
          android:textColor="@color/colorPrimaryText"
          android:textStyle="bold" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="5dp"
          android:layout_marginVertical="2dp"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textColor="@color/colorPrimaryText" />

          <TextView
            android:id="@+id/transaction_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" @lmoro"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="5dp"
          android:layout_marginVertical="2dp"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dal"
            android:textColor="@color/colorPrimaryText" />

          <TextView
            android:id="@+id/transaction_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 23/06/94"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" al"
            android:textColor="@color/colorPrimaryText" />

          <TextView
            android:id="@+id/transaction_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 27/07/94"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold" />

        </LinearLayout>


      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
          android:id="@+id/transaction_write_review"
          android:layout_width="80dp"
          android:layout_height="20dp"
          android:layout_marginVertical="5dp"
          android:background="@drawable/rounded_corner_button_accent"
          android:elevation="5dp"
          android:text="REVIEW"
          android:textColor="@color/white" />

      </LinearLayout>


    </LinearLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>